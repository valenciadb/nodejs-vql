{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/libs/*",
    "packages/products/*",
    "packages/tests/*",
    "packages/tools/*"
  ],
  "engine": {
    "node": ">= 18",
    "npm": ">= 8"
  },
  "devDependencies": {
    "@akromio/doubles": "^0.4.0",
    "@akromio/expected": "^0.4.3",
    "@akromio/expected-fs": "^0.4.3",
    "@akromio/peval": "^0.4.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.2",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "c8": "^7.12.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lerna": "^6.0.1",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.17",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "clean": "npm run env -ws -- rm -rf node_modules/",
    "bootstrap": "npm run clean && npm i -ws",
    "lint": "npm run -ws lint",
    "build": "npm run -ws build",
    "test": "npm run -ws test --if-present",
    "test/itg": "npm run -ws test/itg --if-present",
    "cov": "npm run -ws cov --if-present"
  }
}
