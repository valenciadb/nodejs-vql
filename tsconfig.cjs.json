{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    "allowJs": true,
    "checkJs": false,

    "noEmit": false,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,

    "baseUrl": ".",
    "paths": {
      "antlr4/*": ["node_modules/antlr4/src/antlr4/*"]
    }
  }
}
